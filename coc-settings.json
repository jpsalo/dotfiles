{
  "python.jediEnabled": false,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.enabled": true,
  "eslint.enable": true,
  // Avoid re-fetching types
  // https://github.com/neoclide/coc-tsserver#coc-tsserver
  "tsserver.npm": "/usr/bin/npm",
  "tsserver.enable": true,
  // disable tsserver with flow
  // https://github.com/amiralies/coc-flow#setup
  "javascript.validate.enable": true,
  "flow.enable": false,
  // disable coc-css validation with coc-stylelintplus
  // https://github.com/bmatcuk/coc-stylelintplus#installation
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "wxss.validate": false,
  "angular.enable-strict-mode-prompt": false,
  // "angular.enable-experimental-ivy-prompt": false,
  // "angular.experimental-ivy": true,
  // "suggest.floatConfig": {"border": true},
  // "floatFactory.floatConfig": {"border": true}
  // obsolete/testing
  // "hover.floatConfig": {"border": true},
}
