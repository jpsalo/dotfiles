  status_command i3status
	font pango:"Inconsolata-g" 14px
	colors {
          background  $term_background
          separator   $term_color18
          statusline  $term_color20

                              border        background    text
          focused_workspace   $term_color7  $term_color12 $term_color0
          active_workspace    $term_color7  $term_color8  $term_color0
          inactive_workspace  $term_color8  $term_color18 $term_color7
          urgent_workspace    $term_color9  $term_color9  $term_color0
          binding_mode        $term_color0  $term_color11 $term_color0
  }
}

